<Window x:Class="Unziper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unziper"
        mc:Ignorable="d"
        Title="Unziper" Height="602.5" Width="779.333">
    <Grid>
        <ListView x:Name="filesListView" HorizontalAlignment="Left" Height="454" Margin="47,80,0,0" VerticalAlignment="Top" Width="585" RenderTransformOrigin="0.5,0.5" IsSynchronizedWithCurrentItem="True" Background="#FFCBF9FD" ClipToBounds="True">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="40" Margin="47,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="585"/>
        <Button x:Name="browseButton" Content="Browse" HorizontalAlignment="Left" Height="40" Margin="652,10,0,0" VerticalAlignment="Top" Width="91" Click="browseButton_Click"/>
        <Button x:Name="unzipButton" Content="Unzip" HorizontalAlignment="Left" Height="38" Margin="652,80,0,0" VerticalAlignment="Top" Width="91" Click="unzipButton_Click"/>

    </Grid>
</Window>
